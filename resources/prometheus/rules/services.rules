groups:
- name: Service
  rules:
  - alert: DatabaseDead
    expr: node_systemd_unit_state{name="mariadb.service",state="active"} == 0
    for: 0m
    labels:
      severity: warning
      group: service
    annotations:
#      summary: mariadb.service dead (instance {{ $labels.instance }})
      summary: 数据库服务下线 (instance {{ $labels.instance }})
      description: ""

  - alert: CadvisorDead
    expr: node_systemd_unit_state{name="cadvisor.service",state="active"} == 0
    for: 0m
    labels:
      severity: warning
      group: service
    annotations:
#      summary: cadvisor.service dead (instance {{ $labels.instance }})
      summary: cadvisor服务下线 (instance {{ $labels.instance }})
      description: ""

  - alert: ContainerDead
    expr: time() - container_last_seen > 60
    for: 0m
    labels:
      severity: warning
      group: service
    annotations:
#      summary: Container dead (instance {{ $labels.instance $labels.name }})
      summary: 容器服务下线 (instance {{ $labels.instance }}  {{ $labels.name }})
      description: "A container has disappeared\n  VALUE = {{ $value }}\n  LABELS = {{ $labels }}"
